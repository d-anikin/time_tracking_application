  <table>
    <tr>
      <td style="vertical-align: top">
        <%= l(:label_tta_from_status) %><br>
        <%= select_tag 'settings[start_from_statuses]',
              options_for_select(IssueStatus.sorted.pluck(:name, :id),
                                 Setting.plugin_time_tracking_application['start_from_statuses']),
              :multiple => true,
              :size => 10,
              :style => "width:150px" %>
      </td>
      <td style="vertical-align: top">
        <%= l(:label_tta_to_status) %><br>
