<p>
  <label for="settings_assigned_to_me"><%= l(:label_tta_assigned_to_me) %></label>
  <%= hidden_field_tag 'settings[assigned_to_me]', 0, :id => nil %>
  <%= check_box_tag 'settings[assigned_to_me]', 1, Setting.plugin_time_tracking_application['assigned_to_me'].to_i > 0 %>
</p>
